<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_selector"
    android:layout_row="5"
    android:layout_column="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_row="1"
        android:layout_column="1"
        android:contentDescription="@string/summer_text"
        android:src="@drawable/summer_image" />

    <EditText
        android:id="@+id/guessEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/seasons"
        android:fontFamily="@font/comfort"
        android:hint="@string/guess_the_season"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/dyslexic_text_color"
        android:textColorHint="@color/dyslexic_text_color"
        android:textSize="20sp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_row="2"
        android:layout_column="1"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/seasons"
        android:fontFamily="@font/comfort"
        android:padding="12dp"
        android:text="@string/submit"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:layout_row="3"
        android:layout_column="1"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="426dp"
        android:layout_height="163dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/star_blast"
        android:visibility="gone"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/incorrectView"
        android:layout_width="422dp"
        android:layout_height="186dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="center"
        android:elevation="7dp"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/incorrect" />

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="187dp"
        android:layout_height="133dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/backtomenu"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_icon" />

</GridLayout>
